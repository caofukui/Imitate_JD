<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/set"
            android:layout_toLeftOf="@id/my_iv_message"
            android:padding="10dp"
            android:layout_marginRight="8dp"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/order_msg"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:id="@+id/my_iv_message"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:placeholderImage="@drawable/user"
            android:id="@+id/my_sdv_header"
            android:layout_marginLeft="10dp"
            app:roundAsCircle="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/my_loginandreg"
            android:layout_toRightOf="@id/my_sdv_header"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/my_tv_login_and_reg"
            />
    </RelativeLayout>
</LinearLayout>